<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="30dp">

    <ImageView
        android:id="@+id/gambar_pahlawan"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:padding="10dp"
        android:background="@drawable/rounded"
        android:src="@drawable/defaultt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/nama_pahlawan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pahlawan"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/peran_pahlawan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peran Pahlawan"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/asal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asal"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/asal_pahlawan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asal Pahlawan"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



